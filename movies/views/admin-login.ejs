<div class="form-box">
  <h1 style="text-align: center; margin-bottom: 30px;">Admin Login</h1>
  
  <form action="/admin/login" method="POST">
    <input 
      type="email" 
      name="email" 
      placeholder="Admin Email" 
      required
    >
    <input 
      type="password" 
      name="password" 
      placeholder="Password" 
      required
    >
    <button type="submit" class="btn btn-primary" style="width: 100%; text-align: center;">Login</button>
  </form>
</div>
