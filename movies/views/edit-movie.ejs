<div class="form-box">
  <h1 style="text-align: center; margin-bottom: 30px;">Edit Movie</h1>
  
  <form action="/admin/edit/<%= movie._id %>" method="POST">
    <input 
      type="text" 
      name="title" 
      placeholder="Movie Title" 
      value="<%= movie.title %>" 
      required
    >
    <input 
      type="text" 
      name="director" 
      placeholder="Director Name" 
      value="<%= movie.director %>" 
      required
    >
    <input 
      type="text" 
      name="genre" 
      placeholder="Genre" 
      value="<%= movie.genre %>" 
      required
    >
    <input 
      type="number" 
      name="releaseYear" 
      placeholder="Release Year" 
      value="<%= movie.releaseYear %>" 
      required
    >
    <input 
      type="number" 
      name="rating" 
      placeholder="Rating (1-10)" 
      value="<%= movie.rating %>" 
      min="1" 
      max="10" 
      step="0.1" 
      required
    >
    <input 
      type="url" 
      name="image" 
      placeholder="Image URL" 
      value="<%= movie.image %>" 
      required
    >
    <textarea 
      name="description" 
      placeholder="Movie Description" 
      rows="5" 
      required
    ><%= movie.description %></textarea>
    <button type="submit" class="btn btn-primary" style="width: 100%; text-align: center;">Update Movie</button>
  </form>
</div>
